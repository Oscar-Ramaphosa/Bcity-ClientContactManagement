@model Bcity_Practical.Models.Contact
@{
    ViewData["Title"] = "Edit Contact";
}

<div class="container mt-5">
    <h2>Edit Contact</h2>

    <ul class="nav nav-tabs" id="contactTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active"
                    data-bs-toggle="tab"
                    data-bs-target="#general"
                    type="button">
                General
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link"
                    data-bs-toggle="tab"
                    data-bs-target="#clients"
                    type="button">
                Clients
            </button>
        </li>
    </ul>

    <div class="tab-content mt-3">

        <!-- GENERAL TAB -->
        <div class="tab-pane fade show active" id="general">
            <form>
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input class="form-control" value="@Model.Name" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Surname</label>
                    <input class="form-control" value="@Model.Surname" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" value="@Model.Email" readonly />
                </div>
            </form>
        </div>

        <!-- CLIENTS TAB -->
        <div class="tab-pane fade" id="clients">
            <div class="mt-3">
                <h5>Link New Client</h5>
                <form asp-action="LinkClient" method="post" class="row g-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="contactId" value="@Model.Id" />

                    <div class="col-auto">
                        <select name="clientId" class="form-select">
                            <option value="">-- Select Client --</option>
                            @foreach (var c in ViewBag.AllClients as List<Bcity_Practical.Models.Client>)
                            {
                                <option value="@c.Id">@c.Name (@c.ClientCode)</option>
                            }
                        </select>
                    </div>

                    <div class="col-auto">
                        <button type="submit" class="btn btn-success">Link Client</button>
                    </div>
                </form>
            </div>

            <div class="mt-3">
                <h5>Linked Clients</h5>
                @if (Model.ClientContacts != null && Model.ClientContacts.Any())
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Client Name</th>
                                <th>Client Code</th>
                                <th>Action</th> <!-- Unlink button -->
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cc in Model.ClientContacts)
                            {
                                <tr>
                                    <td>@cc.Client.Name</td>
                                    <td>@cc.Client.ClientCode</td>
                                    <td>
                                        <form asp-action="UnlinkClient" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="contactId" value="@Model.Id" />
                                            <input type="hidden" name="clientId" value="@cc.ClientId" />
                                            <button type="submit" class="btn btn-danger btn-sm">Unlink</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No clients linked to this contact yet.</p>
                }
            </div>
        </div>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                Back to Home
            </a>
        </div>


        </div>

    </div>
</div>
