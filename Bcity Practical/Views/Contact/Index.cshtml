@model IEnumerable<Bcity_Practical.Models.Contact>

@{
    ViewData["Title"] = "Contacts";
}

<div class="container mt-5">
    <h2>Contacts</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Add New Contact</a>

    @if (!Model.Any())
    {
        <p>No Contact(s) found</p>
    }
    else
    {
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th># Clients</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Surname @contact.Name</td>
                    <td>@contact.Email</td>
                    <td class="text-center">@contact.ClientContacts.Count</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-sm btn-success">Edit</a>
                        <a asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
</div>
