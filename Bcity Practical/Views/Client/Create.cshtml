@model Bcity_Practical.Models.Client //tell razor which model to use
@{
    ViewData["Title"] = "Create Client";
}

<div class="container mt-5">
    <h2>Create Client</h2>

    <form asp-controller="Client" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <!--div asp-validation-summary="All" class="text-danger"><!--div>

        <!-- Client Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Client Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
