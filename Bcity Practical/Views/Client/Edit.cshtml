@model Bcity_Practical.Models.Client
@{
    ViewData["Title"] = "Edit Client";
}

<div class="container mt-5">
    <h2>Edit Client</h2>

    <!-- Bootstrap Tabs -->
    <ul class="nav nav-tabs" id="clientTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active"
                    id="general-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#general"
                    type="button"
                    role="tab">
                General
            </button>
        </li>

        <li class="nav-item" role="presentation">
            <button class="nav-link"
                    id="contacts-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#contacts"
                    type="button"
                    role="tab">
                Contacts
            </button>
        </li>
    </ul>

    <div class="tab-content mt-3">

        <!-- GENERAL TAB -->
        <div class="tab-pane fade show active"
             id="general"
             role="tabpanel">

            <form>
                <!-- Client Code (Readonly) -->
                <div class="mb-3">
                    <label class="form-label">Client Code</label>
                    <input class="form-control"
                           value="@Model.ClientCode"
                           readonly />
                </div>

                <!-- Client Name -->
                <div class="mb-3">
                    <label class="form-label">Client Name</label>
                    <input class="form-control"
                           value="@Model.Name"
                           readonly />
                </div>

                <div class="mt-3">
                    <form asp-controller="Home" asp-action="Index" method="get">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>

            </form>


        </div>

        <!-- CONTACTS TAB -->
        <div class="tab-pane fade"
             id="contacts"
             role="tabpanel">

            <!-- Link New Contact -->
            <div class="mt-3">
                <h5>Link New Contact</h5>
                <form asp-action="LinkContact" method="post" class="row g-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="clientId" value="@Model.Id" />

                    <div class="col-auto">
                        <select name="contactId" class="form-select">
                            <option value="">-- Select Contact --</option>
                            @foreach (var c in ViewBag.AllContacts as List<Bcity_Practical.Models.Contact>)
                            {
                                <option value="@c.Id">@c.Surname @c.Name (@c.Email)</option>
                            }
                        </select>
                    </div>

                    <div class="col-auto">
                        <button type="submit" class="btn btn-success">Link Contact</button>
                    </div>
                </form>
            </div>

            <!-- Linked Contacts Table -->
            <div class="mt-3">
                <h5>Linked Contacts</h5>

                @if (Model.ClientContacts != null && Model.ClientContacts.Any())
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Email</th>
                                <th>Action</th> <!-- Unlink column -->
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cc in Model.ClientContacts)
                            {
                                <tr>
                                    <td>@cc.Contact.Name</td>
                                    <td>@cc.Contact.Surname</td>
                                    <td>@cc.Contact.Email</td>
                                    <td>
                                        <form asp-action="UnlinkContact" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="clientId" value="@Model.Id" />
                                            <input type="hidden" name="contactId" value="@cc.ContactId" />
                                            <button type="submit" class="btn btn-danger btn-sm">Unlink</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No contacts linked to this client yet.</p>
                }
            </div>

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    Back to Home
                </a>
            </div>

        </div>

    </div>
</div>
