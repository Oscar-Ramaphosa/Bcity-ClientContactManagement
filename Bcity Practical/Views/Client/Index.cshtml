@model IEnumerable<Bcity_Practical.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<div class="container mt-5">
    <h2>Clients</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">
        Add New Client
    </a>

    @if (!Model.Any())
    {
        <p>No Client(s) found</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-start">Name</th>
                    <th class="text-start">Client Code</th>
                    <th class="text-center">No. of linked contacts</th>
                    <th class="text-start">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <!-- Name FIRST (left aligned) -->
                        <td class="text-start">@client.Name</td>

                        <!-- Client Code SECOND (left aligned) -->
                        <td class="text-start">@client.ClientCode</td>

                        <!-- Contact count CENTER aligned -->
                        <td class="text-center">
                            @(client.ClientContacts?.Count ?? 0)
                        </td>

                        <!-- Actions (allowed even if not in spec) -->
                        <td>
                            <a asp-action="Edit"
                               asp-route-id="@client.Id"
                               class="btn btn-sm btn-success">
                                Edit
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@client.Id"
                               class="btn btn-sm btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
